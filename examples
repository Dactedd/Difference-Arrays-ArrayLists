// Project: Simple-Difference-Arrays-ArrayLists

import java.util.ArrayList;

public class DifferenceArraysArrayLists {
    public static void main(String[] args) {

        // Arrays Example
        System.out.println("--- Arrays Example ---");
        int[] numbersArray = {1, 2, 3}; // Fixed size array
        System.out.println("Array size: " + numbersArray.length);
        System.out.println("First element in array: " + numbersArray[0]);

        // Cannot add or remove elements in an array
        // numbersArray[3] = 4; // This would cause an error because the size is fixed

        // ArrayLists Example
        System.out.println("\n--- ArrayLists Example ---");
        ArrayList<Integer> numbersList = new ArrayList<>(); // Dynamic size
        numbersList.add(1);
        numbersList.add(2);
        numbersList.add(3);
        System.out.println("ArrayList size: " + numbersList.size());
        System.out.println("First element in ArrayList: " + numbersList.get(0));

        // Adding more elements to the ArrayList
        numbersList.add(4); // Allowed because ArrayList is resizable
        System.out.println("ArrayList after adding an element: " + numbersList);

        // Removing an element from the ArrayList
        numbersList.remove(Integer.valueOf(2));
        System.out.println("ArrayList after removing an element: " + numbersList);
    }
}
